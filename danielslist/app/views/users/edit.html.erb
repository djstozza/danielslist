<div class="jumbotron">
	<% if @current_user.errors.any? %>
		<ul>
			<% @current_user.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	<% end %>
	<h2 class="heading">Edit User</h2>
	<%= form_for @current_user do |f| %>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="form-group col-md-4">
			<%= f.label :email, :class => 'sr-only', :for => 'exampleInputEmail3' %>
			<%= f.email_field :email, :class => 'form-control', :id => 'exampleInputEmail3', :placeholder => 'Email' %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="form-group col-md-4">
			<%= f.label :username, :class => 'sr-only', :for => 'exampleInputUser3' %>
			<%= f.text_field :username, :class => 'form-control', :for => 'exampleInputUser3', :placeholder => 'Username' %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="form-group col-md-4">
			<%= f.label :password, :class => 'sr-only', :for => 'exampleInputPassword3' %>
			<%= f.password_field :password, :class => 'form-control', :id => 'exampleInputPassword3', :placeholder => 'Password' %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="form-group col-md-4">
			<%= f.label :password_confirmation, :class => 'sr-only', :for => 'exampleInputPassword3' %>
			<%= f.password_field :password_confirmation, :class => 'form-control', :id => 'exampleInputPassword3', :placeholder => 'Password' %>
		</div>
	</div>
	
	<div class="col-md-4 submit"></div>
	
	<%= submit_tag "Edit", :class => 'btn btn-default submit' %>
	<% end %>