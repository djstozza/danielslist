<h2>New User</h2>

<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
<% end %>

<%= form_for @user do |f| %>
<p>
	<ul>
		<li><%= f.label :email, 'Email Address:' %></li>
		<li>
			<%= f.email_field :email %>
		</li>
	</ul>
</p>
<p>
	<ul>
		<li><%= f.label :username, 'Username:' %></li>
		<li><%= f.text_field :username %></li>
	</ul>
</p>
<p>
	<ul>
		<li><%= f.label :name, 'First Name:' %></li>
		<li><%= f.text_field :name %></li>
	</ul>
</p>
<p>
	<ul>
		<li><%= f.label :surname, 'Surname:' %></li>
		<li><%= f.text_field :surname %></li>
	</ul>
</p>
<p>
	<ul>
		<li><%= f.label :password, 'Password:' %></li>
		<li><%= f.password_field :password %></li>
	</ul>
</p>
<p>
	<ul>
		<li><%= f.label :password_confirmation, 'Confirm Password' %></li>
		<li><%= f.password_field :password_confirmation%></li>
	</ul>
</p>
<%= f.submit %>
<% end %>

<p>Already a user? Go back to the <%= link_to 'Login', login_path%> Page</p>

