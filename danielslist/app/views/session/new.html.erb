<h2>Login</h2>

<%= form_tag '/login' do %>
	<p>
		<%= label_tag :email, 'Email:'  %>
		<%= email_field_tag :email %>
	</p> 
	<p>
		<%= label_tag :password, 'Passowrd:' %>
		<%= password_field_tag :password %>
	</p>
	
	<p>
		<%= submit_tag "Login to DanielsList" %>
	</p>
	
<% end %>

<p>Not a user?? Please go to the  <%= link_to 'Create User Form', new_user_path %></p>