<h2>Login</h2>



<%= form_tag '/login', :class => 'form-inline' do %>
<div class="form-group">
	<%= label_tag(:email, nil, :class => 'sr-only', :for => 'exampleInputEmail3') %>
	<%= email_field_tag :email, nil, :class => "form-control", :id => 'exampleInputEmail3', :placeholder => 'Email'  %>
</div>
<div class="form-group">
	<%= label_tag :password, nil, :class => 'sr-only', :for => 'exampleInputPassword3' %>
	<%= password_field_tag :password, nil, 	:class => 'form-control', :id => 'exampleInputPassword3', :placeholder => 'Password' %>
</div>
	<%= submit_tag "Sign In", :class => 'btn btn-default' %>
<% end %>


<p>Not a user?? Please go to the  <%= link_to 'Create User Form', new_user_path %></p>